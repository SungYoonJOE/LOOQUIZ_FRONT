<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        tools:context=".FindPWActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp" android:paddingBottom="10dp"
        >
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/quizrate_item_iv"/>
            <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/quizrate_item_tv"
            />
        </LinearLayout>

        <ProgressBar
                style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/quizrate_item_pb"
                android:layout_weight="1"
                android:max="10"
                android:progress="5"
                android:layout_gravity="center"
        />
    </LinearLayout>

</LinearLayout>
