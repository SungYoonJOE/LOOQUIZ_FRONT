<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".MakingQuizActivity">

    <android.support.design.widget.AppBarLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#A9BFF5"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/history_logo_2x"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="30dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <!--<Spinner
                    android:id="@+id/makingquiz_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:padding="2dp"
                    android:spinnerMode="dropdown"/>-->
            <EditText
                    android:id="@+id/makingquiz_inputcityname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="10dp"
                    android:hint="도시를 입력해주세요 예)서울"/>
            <EditText
                    android:id="@+id/makingquiz_inputdname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="10dp"
                    android:hint="지역을 입력해주세요 예)광화문"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="31.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="정답\n체크"/>
            <EditText
                    android:id="@+id/makingquiz_inputquestion"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="질문을 입력해주세요"/>
        </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RadioButton
                            android:id="@+id/radioBtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="1"
                            android:textSize="0dp"/>
                    <RadioButton
                            android:id="@+id/radioBtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="2"
                            android:textSize="0dp"/>
                    <RadioButton
                            android:id="@+id/radioBtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="3"
                            android:textSize="0dp"/>
                    <RadioButton
                            android:id="@+id/radioBtn4"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="4"
                            android:textSize="0dp"/>
                    <RadioButton
                            android:id="@+id/radioBtn5"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="5"
                            android:textSize="0dp"/>
                </RadioGroup>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <EditText
                            android:id="@+id/makingquiz_inputans1"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="1번을 입력해주세요."
                            android:singleLine="true"/>
                    <EditText
                            android:id="@+id/makingquiz_inputans2"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="2번을 입력해주세요."
                            android:singleLine="true"/>
                    <EditText
                            android:id="@+id/makingquiz_inputans3"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="3번을 입력해주세요."
                            android:singleLine="true"/>
                    <EditText
                            android:id="@+id/makingquiz_inputans4"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="4번을 입력해주세요."
                            android:singleLine="true"/>
                    <EditText
                            android:id="@+id/makingquiz_inputans5"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="5번을 입력해주세요."
                            android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        <EditText
                android:id="@+id/makingquiz_inputhint"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="@drawable/statelist_drawable"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="힌트를 입력해주세요"/>
        <EditText
                android:id="@+id/makingquiz_inputcontent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="@drawable/statelist_drawable"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="문제 해설을 입력해주세요"/>
        <Button
                android:id="@+id/makingquiz_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_drawable"
                android:textColor="#FFFFFF"
                android:text="등록"/>
    </LinearLayout>
</LinearLayout>