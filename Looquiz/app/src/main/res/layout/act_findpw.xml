<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        tools:context=".FindPWActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="ID"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/findpw_inputID" android:hint="이메일을 입력해주세요" android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="이메일"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/findpw_inputEMAIL" android:layout_marginLeft="5dp" android:textSize="14sp"/>
        <TextView
                android:text="@"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <Spinner
                android:entries="@array/이메일"
                android:layout_width="100dp"
                android:text="이메일 선택"
                android:layout_height="wrap_content" android:id="@+id/findpw_spinner" android:spinnerMode="dropdown"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="확인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/findpw_btnok" android:layout_weight="1"
                android:paddingBottom="10dp"/>
    </LinearLayout>
</LinearLayout>
