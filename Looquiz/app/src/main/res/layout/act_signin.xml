<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        tools:context=".SignInActivity" android:gravity="center">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/history_logo_1x"
            android:id="@+id/imageView4"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="15dp" android:gravity="center_horizontal">
        <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/statelist_drawable"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textSize="18dp"
                android:id="@+id/signin_inputID" android:hint="ID"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" android:gravity="center_horizontal">
        <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/statelist_drawable"
                android:padding="10dp"
                android:inputType="textPassword"
                android:ems="10"
                android:textSize="18dp"
                android:id="@+id/signin_inputPW" android:hint="Password"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
        <TextView
                android:text="아이디/비밀번호 찾기"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/signin_btnfind"/>

        <CheckBox
                android:text="자동 로그인"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signin_checkbox"/>


    </LinearLayout>
    <Button
            android:text="로그인"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/signin_btnsignin"
            android:background="@drawable/button_drawable"
            android:textColor="#FFFFFF"/>

    <TextView
            android:text="회원가입"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/signin_btnsignup"/>


</LinearLayout>