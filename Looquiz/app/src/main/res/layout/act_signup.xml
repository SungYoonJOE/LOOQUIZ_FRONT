<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        tools:context=".SignUpActivity" android:layout_marginLeft="5dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="ID"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/signup_inputID" android:hint="아이디를 입력해주세요" android:layout_marginLeft="5dp"
                android:textSize="14sp"/>

        <Button
                android:text="중복확인"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/signup_btnCHECK"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="PW"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signup_inputPW" android:hint="비밀번호를 입력해주세요" android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="PW확인"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:maxLines="1"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/signup_inputPW2" android:hint="비밀번호를 다시 입력해주세요" android:layout_marginLeft="5dp"
                android:textSize="14sp" android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="이름"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/signup_inputNAME" android:hint="비밀번호를 입력해주세요" android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">
        <TextView
                android:text="이메일"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/signup_inputEMAIL" android:layout_marginLeft="5dp" android:textSize="14sp"/>
        <TextView
                android:text="@"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <Spinner
                android:entries="@array/이메일"
                android:layout_width="150dp"
                android:text="이메일 선택"
                android:layout_height="wrap_content" android:id="@+id/signup_spinner" android:spinnerMode="dropdown"
        />
    </LinearLayout>
    <Button
            android:text="회원가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/signup_btnSIGNUP" android:layout_marginTop="30dp"/>
</LinearLayout>
