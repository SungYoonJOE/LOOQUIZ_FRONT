<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".MakingQuizActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <Spinner
                android:id="@+id/input_region"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:entries="@array/quiz_region"
                android:padding="2dp"
                android:spinnerMode="dropdown"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정답체크"/>
        <EditText
                android:id="@+id/editingquiz_inputquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:hint="질문을 입력해주세요"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"/>
        </RadioGroup>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/editingquiz_inputans1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="1번을 입력해주세요."
                    android:singleLine="true"/>
            <EditText
                    android:id="@+id/editingquiz_inputans2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="2번을 입력해주세요."
                    android:singleLine="true"/>
            <EditText
                    android:id="@+id/editingquiz_inputans3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="3번을 입력해주세요."
                    android:singleLine="true"/>
            <EditText
                    android:id="@+id/editingquiz_inputans4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="4번을 입력해주세요."
                    android:singleLine="true"/>
            <EditText
                    android:id="@+id/editingquiz_inputans5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="5번을 입력해주세요."
                    android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
            android:id="@+id/editingquiz_inputhint"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/quiz_inputbox"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:hint="힌트를 입력해주세요"/>
    <EditText
            android:id="@+id/editingquiz_inputcontent"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/quiz_inputbox"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:hint="문제 해설을 입력해주세요"/>
    <Button
            android:id="@+id/editingquiz_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="등록"/>
</LinearLayout>